import java.io.Serializable;

public class Registro implements Serializable {
    private static final long serialVersionUID = 1L;
    
    private String nombre;
    private String cedula;
    private int edad;
    private double auxilio;
    private boolean esDesplazado;
    private int estrato;
    
    // Constructor con validaciones y cálculo del auxilio para menores de edad.
    public Registro(String nombre, String cedula, int edad, boolean esDesplazado, int estrato) {
        if (nombre == null || nombre.trim().isEmpty()) {
            throw new IllegalArgumentException("El nombre no puede estar vacío.");
        }
        if (cedula == null || cedula.trim().isEmpty()) {
            throw new IllegalArgumentException("La cédula no puede estar vacía.");
        }
        if (edad <= 0) {
            throw new IllegalArgumentException("La edad debe ser mayor a 0.");
        }
        if (estrato < 1 || estrato > 6) {
            throw new IllegalArgumentException("El estrato debe estar entre 1 y 6.");
        }
        
        this.nombre = nombre;
        this.cedula = cedula;
        this.edad = edad;
        this.esDesplazado = esDesplazado;
        this.estrato = estrato;
        
        // Se asigna auxilio solo a los menores de edad.
        if (edad < 18) {
            final double SALARIO_MINIMO = 1000000;  // Puedes ajustar este valor.
            this.auxilio = SALARIO_MINIMO * 0.8;
        } else {
            this.auxilio = 0;
        }
    }
    
    // Métodos getters
    public String getNombre() {
        return nombre;
    }
    
    public String getCedula() {
        return cedula;
    }
    
    public int getEdad() {
        return edad;
    }
    
    public double getAuxilio() {
        return auxilio;
    }
    
    public boolean isEsDesplazado() {
        return esDesplazado;
    }
    
    public int getEstrato() {
        return estrato;
    }
    
    @Override
    public String toString() {
        return "Registro{" +
                "nombre='" + nombre + '\'' +
                ", cedula='" + cedula + '\'' +
                ", edad=" + edad +
                ", auxilio=" + auxilio +
                ", esDesplazado=" + esDesplazado +
                ", estrato=" + estrato +
                '}';
    }
}